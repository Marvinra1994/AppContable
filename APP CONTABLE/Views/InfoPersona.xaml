<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:APP_CONTABLE.ViewModels"
             x:Class="APP_CONTABLE.Views.InfoPersona"
             IconImageSource="usuario.png">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://www.liderdelemprendimiento.com/wp-content/uploads/2018/02/Contabilidad-3000x2178.jpg"></Image>

            <Label Text="Nombre"></Label>
            <Entry Text="{Binding Nombre}" Keyboard="Text"></Entry>

            <Label Text="Genero"></Label>
            <Entry Text="{Binding genero}"></Entry>


            <Label Text="Id"></Label>
            <Entry Text="{Binding id}" Keyboard="Text" ></Entry>

            <Button Text="Guardar" Command="{Binding CrearPersona}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>